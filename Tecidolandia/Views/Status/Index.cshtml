@model IEnumerable<Tecidolandia.Models.Entities.Status>

@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Content/EditSite.css")" rel="stylesheet" type="text/css" />

<h2>Status da Venda</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<table class="table well">
    <tr>
        <th>
            <label class="label label-default text-justify m-2">@Html.DisplayNameFor(model => model.NmStatus)</label>
</th>
        <th>
            <label class="label label-default text-justify m-2">@Html.DisplayNameFor(model => model.StatusVenda)</label>
</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NmStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusVenda)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.IdStatus }, new { @class = "glyphicon glyphicon-pencil" })
                &nbsp
                @Html.ActionLink(" ", "Details", new { id = item.IdStatus }, new { @class = "glyphicon glyphicon-option-horizontal" })
                &nbsp
                @*@Html.ActionLink(" ", "Delete", new { id = item.IdStatus }, new { @class = "glyphicon glyphicon-trash" })*@
            </td>
        </tr>
    }

</table>
