@model IEnumerable<Tecidolandia.Models.Entities.Produto>

@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Content/EditSite.css")" rel="stylesheet" type="text/css" />

<h2>Cadastrar Produto</h2>

<p>
    @Html.ActionLink("Criar", "Create")
</p>
<table class="table well">
    <tr>
        <th>
            <label class="label label-default text-justify m-2">@Html.DisplayNameFor(model => model.TipoEstampas.Nome)</label>
        </th>
        <th>
            <label class="label label-default text-justify m-2">@Html.DisplayNameFor(model => model.Nome)</label>
        </th>
        <th>
            <label class="label label-default text-justify m-2">@Html.DisplayNameFor(model => model.Descricao)</label>
        </th>
        <th>
            <label class="label label-default text-justify m-2"> @Html.DisplayNameFor(model => model.Largura)</label>
        </th>
        <th>
            <label class="label label-default text-justify m-2">@Html.DisplayNameFor(model => model.Altura)</label>
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.DtRegistro)
            </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoEstampas.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Largura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.DtRegistro)
                </td>*@
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.IdProduto }, new { @class = "glyphicon glyphicon-pencil" })
                &nbsp
                @Html.ActionLink(" ", "Details", new { id = item.IdProduto }, new { @class = "glyphicon glyphicon-option-horizontal" })
                &nbsp
                @Html.ActionLink(" ", "Delete", new { id = item.IdProduto }, new { @class = "glyphicon glyphicon-trash" })
            </td>
        </tr>
    }

</table>
